<%= form_for review, :url => product_reviews_path(product) do |f| %>
  <%= render "shared/error_messages", :target => review %>

  <div class="review_rating_field">
    <%= f.label :rating %> <span class="required">*</span><br />
    <%= render :partial => "reviews/stars" %>
	<%= f.hidden_field :rating %>
  </div>

  <p class="review_name_field">
    <%= f.label :name %> <span class="required">*</span><br />
    <%= f.text_field :name, :maxlength => "255" %>
  </p>
  
  <p class="review_review_field">
    <%= f.label :review %> <span class="required">*</span><br />
    <%= f.text_area :review, :wrap => "virtual" %>
  </p>

  <p class="review_submit">
    <%= button_tag I18n.t('submit_your_review'), :class => "button-submit" %>
  </p>
<% end %>
